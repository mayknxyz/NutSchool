---
export interface CardContent {
  headingType?: 'h1' | 'h2' | 'h3';
  headingText?: string;
  paragraphText?: string;
}

export interface Props {
  cards?: CardContent[];
}

const { cards = [
  { headingType: 'h2', headingText: 'Card 1' },
  { headingType: 'h2', headingText: 'Card 2' },
  { headingType: 'h2', headingText: 'Card 3' },
  { headingType: 'h2', headingText: 'Card 4' },
  { headingType: 'h2', headingText: 'Card 5' },
] } = Astro.props;
---
<section class="my-8">
    <div class="w-full max-w-full mx-auto">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-5 gap-8">
            {cards.map(card => {
                const Heading = card.headingType || 'h2';
                return (
                    <div class="glass-card w-full px-8 py-20 relative text-center">
                        {card.headingText && <Heading>{card.headingText}</Heading>}
                        {card.paragraphText && <p>{card.paragraphText}</p>}
                    </div>
                )
            })}
        </div>
    </div>
</section>
